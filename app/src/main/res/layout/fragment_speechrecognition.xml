<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Speechrecognition">

    <!-- TODO: Update blank fragment layout -->

    <TextView

        android:id="@+id/data"
        style="?android:textViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/speak_something_after_clicking_mic_image_to_improve_your_accent_of_it"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data"
        tools:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/click_to_speak_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:padding="20dp"
                android:text="@string/click_here_to_speak"
                android:textSize="18sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/record"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="20dp"
                android:src="@drawable/ic_mic_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/talk_in_accent_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/click_here_to_listen_to_an_accent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:padding="20dp"
                android:text="Click speaker icon to listen in American accent  and speak again if not satisfied"
                android:textSize="18sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/speak_in_accent"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="20dp"
                android:src="@drawable/ic_volume_up_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_spoken_words_in_database"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0e0e0"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="Do you want to save your speech for reviewing later ?"
                android:textSize="16sp" />

            <LinearLayout

                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/save_words_spoken_No"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="20dp"

                    android:text="No, don't save it ." />

                <Button
                    android:id="@+id/save_words_spoken_Yes"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_ripple"
                    android:padding="20dp"
                    android:text="Yes, Save it."
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView

        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="53dp"
        android:layout_weight="9"
        android:hint="You can see yothe words you spoke that you have choosed to save on the left side menu in the home screen "
        android:padding="10dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>