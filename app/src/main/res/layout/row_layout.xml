<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/textview_meaning"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="8"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:tooltipText="swipe left to delete"
        android:text="@string/meaning"
        android:textColor="#616161"
        android:textSize="20sp"
       android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:ellipsize="end"
        android:maxLines="1"
       android:background="?attr/selectableItemBackground"/>

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/audio_play"
        android:tag="@string/audio_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:contentDescription="@string/audio_play_button"
        android:src="@drawable/ic_volume_up_black_24dp" />


    <ImageView
        android:id="@+id/add_fav_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:src="@drawable/likes"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/likebutton"
        android:tag="@string/like"
        style=""
       android:background="@android:color/transparent"/>
</LinearLayout>