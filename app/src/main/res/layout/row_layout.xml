<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"

    android:id="@+id/rootlayout_main_fragment"
    android:background="@drawable/mainfragment_ripple"
  android:focusable="false"
    >

    <TextView
        android:id="@+id/textview_meaning"

        android:layout_height="50dp"

        android:ellipsize="end"
        android:focusable="false"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:textColor="#616161"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_weight="6"
        android:layout_width="0dp" />


    <TextView
        android:id="@+id/partsof_speech_text_view"
     android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left"
        android:text="v"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_meaning"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="5dp"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/audio_play"
        style="?attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:contentDescription="@string/audio_play_button"
        android:focusable="false"
        android:padding="10dp"
        android:src="@drawable/ic_volume_up_black_24dp"
        android:tag="@string/audio_play_button" />

    <ImageButton
        android:id="@+id/add_fav_meaning"
        style="?attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"

        android:layout_weight="2"
        android:contentDescription="@string/likebutton"
        android:focusable="false"
        android:src="@drawable/likes_on_itemview"
        android:tag="@string/like" />

    <ImageButton
        android:id="@+id/share"
        style="?attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:contentDescription="@string/share_button"
        android:focusable="false"
        android:padding="10dp"
        android:src="@drawable/ic_share_black_24dp"
        android:tag="@string/audio_play_button" />
</LinearLayout>